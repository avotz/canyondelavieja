@import "nib"
@import "normalize.styl"
@import "icons.styl"
@import "basic.styl"
@import "wc.styl"
body
	background-color #e8e8e8
.header
	position: fixed;
	top: 0;
	height: 60px;
	width: 100%;
	border-bottom: 1px solid #ddd;
	z-index: 9999;
	background-color white
	
	&-logo
		position: relative;
		display: inline-block;
		width: 55px;
	&-menu
		display none
		background-color verde
		padding .5rem
		a 
			color white
			padding .5rem .5rem
			display block
			text-transform uppercase
			font-weight 900
			&:hover
				color naranja
	&-social
		position absolute
		right: 70px;
		top: 15px;
		a 
			display inline-block
			padding 0 .5rem
			font-size 1.5rem
			color naranja
	&-btn-menu
		display block
		position absolute
		right 20px
		color verde
		top 10px
		background-color transparent
		border 0
		font-size 2rem
		outline 0

@media screen and (min-width: 768px)
	.header
		position: relative;
		display: inline-block;
		height: auto
		background: #fff;
		&-logo
			position: static;
			vertical-align: top;
			padding: 5px 15px;
			width 80px
		
		&-menu
			display inline-block !important
			background-color transparent
			padding-left 1rem
			padding-bottom 1rem
			vertical-align bottom
			padding-top 0
			width 700px
			&-ul 
				display flex
				flex-wrap wrap
				justify-content space-between
				width 100%
			li
				padding 0 0
				
			
			a 
				padding 0
				display block 
				text-transform uppercase
				color celeste
		&-btn-menu		
			display none
		&-social
			right 20px
			
	


.banner
	position relative
	height 90vh
	background-image url(./img/banner.jpg)
	background-size cover
	background-position center top
	background-repeat no-repeat
	margin-bottom 1rem
	&-container
		display flex
		justify-content center
		align-items center
		height 90vh

.main
	&-item
		width 100%//33%
		position relative
		overflow hidden
		margin-bottom 1.5rem
		background #ccc
		max-height 450px
		iframe
			height 100%
		/*&.highlight
			background-color: #78b800;
			img
				opacity 1
				mix-blend-mode: soft-light*/
		&-link
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			display block
		&-info
			position: absolute;
			background-color rgba(0,0,0,.55)
			bottom: 0;
			left 0
			right 0
			padding 1rem
			transition: all .3s cubic-bezier(0.165, 0.840, 0.440, 1.000) 0ms;
		
		&-title
			padding .1rem 0
			color: #f0f0f0;
			text-transform uppercase
			font-weight 900
			font-size 1.6rem
			
		&-button
			position: absolute;
			bottom: 10%;
			right 5%
			padding .5rem 1rem
			text-align: center;
			background-color #fff
			color: verde;
			text-transform uppercase
			font-weight 900
			cursor pointer
			//display block
			&:hover
				background-color verde
				color white
		&:hover
			.main-item-info
				padding-bottom 25px
			
		img
			width: 100%;
			margin: 0 auto;
			display: block;
			transition: all .3s cubic-bezier(0.165, 0.840, 0.440, 1.000) 0ms;
			
		p 
			color white
			display none

@media screen and (min-width: 768px)
	.main
		&-item
			width 33%
			&.size-2
				width 65.8%
			&-button
				position static
				
			p 
				display block
				
.services
	&-item 
		display block
		width: 100%;
		height: 180px;
		background-color: #fff;
		position: relative;
		margin-bottom: 10px;
		clear: both;
		&-img 
			vertical-align: top;
			position: absolute;
			top: 0;
			left: 0;
			width: 40%;
			height: 100%;
			img 
				width 100%
				height 100%
				display block
		&-content
			width: auto;
			min-height: 156px;
			padding: 10px 10px 50px 45%;
			vertical-align: top;
			font-size: 14px;
			overflow hidden
			line-height 20px
			p 
				display none
		&-details
			text-align: right;
			width: 100%
			vertical-align: top;
			padding: 3px 8px 15px 0;
			position: absolute;
			top: 0;
			right: 0;
			height: 100%;
			.bottom 
				position: absolute;
				bottom: 30px;
				right: 30px;
				font-size: 14px;
			.price
				font-size 1.3rem
				font-weight 900
		&-title 
			text-transform uppercase
			color verde
			font-weight 900
			margin-bottom 10px
		&-subtitle
			margin-bottom 10px
			font-weight bold
	&-header
		margin-top 1rem
		margin-bottom 1rem
		padding 0 1rem
		h2
			display inline-block
		a 
			float right
			display block
			color verde
	&-title 
		font-size 1.5rem
	

@media screen and (min-width: 768px)
	.services
		&-item
			&-img 
				width: 240px;
				height auto 
			&-content
				padding: 15px 360px 15px 270px;
				min-height: 180px;
				p 
					display block
			&-details
				width: 340px;
				padding: 15px 30px 15px 0;
				.price
					font-size 2rem
.footer
	background-color #e1e1e1
	padding 2rem 0
	&-box-item
		background-color white
		padding 1rem
		position relative
		min-height: 130px;
		width: 100%;
		min-width: 250px;
		margin-bottom 1rem
		.content 
			display block
			
			span 
				display block
				margin 0
				line-height 1.2rem
				text-transform uppercase
				&.title 
					font-weight 900
					margin-bottom 1rem
		.btn 
			position: absolute;
			//bottom: 20px;
			right: 20px;
			display block
		.social
			position absolute
			right 20px
			a 
				display inline-block
				padding .5rem
				font-size 1.5rem
		.logos
			img 
				display inline-block
				width 70px
				padding 0 .5rem 
	.bottom 
		text-align center
		margin 1rem 0
	
	

@media screen and (min-width: 768px)
	.footer
		&-box-item
			width 30%
.entry-header
	padding: 2rem 0
.entry-content
	background-color: white
	padding: 1rem 2rem
	ul 
		margin-left: 45px


